    "@prisma/client": "^6.15.0",
    "@types/nodemailer": "^7.0.1",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dayjs": "^1.10.6",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "fuzzball": "^2.2.0",
    "helmet": "^8.0.0",
    "i18next": "^25.4.2",
