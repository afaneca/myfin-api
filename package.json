{
  "type": "module",
  "scripts": {
    "start": "npx tsx src/server.ts",
    "start:dev": "npx tsx watch src/server.ts",
    "build": "tsc",
    "eslint": "eslint ./",
    "eslint-fix": "eslint ./ --fix",
    "db:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate-from-db": "prisma db pull && prisma migrate dev",
    "db:seed": "prisma db seed",
    "test:unit": "vitest -c ./vitest.config.unit.ts",
    "test:unit:run": "vitest run -c ./vitest.config.unit.ts",
    "test:unit:ui": "vitest -c ./vitest.config.unit.ts --ui --coverage",
    "test:integration": "dotenv -e .env.test -- docker compose -f docker-compose.tests.yml up -d && dotenv -e .env.test -- npm run db:deploy && dotenv -e .env.test -- vitest --run --config vitest.config.integration.ts && docker compose -f docker-compose.tests.yml down -v"
  },
  "name": "myfin-api",
  "version": "3.0.1",
  "description": "NodeJS API for Myfin",
  "main": "src/server.js",
  "devDependencies": {
